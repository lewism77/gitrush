{
  "name": "gitrush",
  "displayName": "GitRush",
  "description": "Puts the Git features front and centre that I use most often in my workflow. And I always rush.",
  "version": "1.1.0",
  "publisher": "LaughingPancake",
  "repository": "https://github.com/lewism77/gitrush",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "keywords": [
    "git",
    "gitrush",
    "push",
    "commit hash"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitrush.copyCommit",
        "title": "GitRush: Copy commit hash",
        "icon": "$(git-commit)"
      }
    ],
    "configuration": 
      {
        "title": "GitRush",
        "properties": {
          "gitrush.enablePush": {
            "type": "boolean",
            "default": true,
            "description": "Show the 'Push' status bar button. Clicking calls `git push`."
          },
          "gitrush.enableForcePush": {
            "type": "boolean",
            "default": false,
            "description": "Show the 'Force Push' status bar button - *be careful with this*. Clicking calls `git push -f`."
          },
          "gitrush.enableCopyHash": {
            "type": "boolean",
            "default": true,
            "description": "Show the status bar button with the current hash. Clicking will copy the full hash to the clipboard."
          },
          "gitrush.enableCommitAmend": {
            "type": "boolean",
            "default": true,
            "description": "Show the 'Amend' status bar button. Clicking calls `git commit --amend --no-edit`."
          }
        }
      }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "deploy": "vsce publish",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  }
}
